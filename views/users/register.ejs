<% layout('layouts/boilerplate') %>


<div class="row">

  <div class="col-6 offset-3">
    <h1>New User</h1>

    <div class="col-xl">
      <div class="card shadow">
        <img src="https://res.cloudinary.com/drrtkq22t/image/upload/h_610/v1670971127/Yelp%20Camp/welcome_ivhoj1.png" alt="" class="card-img-top" crossorigin />
        <div class="card-body">

          <form action="./register" method="POST" novalidate class="validated-form" novalidate>
            <div class="mb-3">
              <label class="form-label" for="username">Username</label>
              <input class="form-control" type="text" id="username" name="username" required>
              <div class="valid-feedback">Looks good</div>
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email</label>
              <input class="form-control" type="email" id="email" name="email" required>
              <div class="valid-feedback">Looks good</div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="valid-feedback">Looks good</div>
            </div>

            <div class="mb-3">
              <button class="btn btn-warning">register</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>





<a href="/campgrounds">all campgrounds</a>
</div>
</div>